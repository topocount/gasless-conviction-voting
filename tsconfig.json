{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES6"
  },
  "paths": {
    "*": ["node_modules/*", "src/types/*"]
  }
}
